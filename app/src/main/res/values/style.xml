<resources>

    <style name="CustomTabLayouts" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomTabLayout.Light" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/lightTabBackground</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance.Light</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomTabTextAppearance.Light" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/lightTabText</item>
    </style>


    <style name="CustomTabLayout.Dark" parent="CustomTabLayouts">
        <item name="tabBackground">@color/darkTabBackground</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance.Dark</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomTabTextAppearance.Dark" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/darkTabText</item>
    </style>
    <style name="AppTheme.Dark.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="AppTheme.Dark.Button" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
    </style>



</resources>

