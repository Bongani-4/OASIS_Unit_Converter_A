<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A34E4A4A"
    tools:context=".MIllimetresFragment">


    <EditText

        android:id="@+id/editmetre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/white"
        android:textColorHint="#6A6666"
        android:hint="Enter value here" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="Convert length"
        android:textColor="@color/black"

        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-160dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/millimetre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:hint="0.00"
            android:textColor="#F2293C87"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/centmetre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="15sp"
            android:textColor="#F2293C87"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/metre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="15sp"
            android:textColor="#F2293C87"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/kilometre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textColor="#F2293C87"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/inches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="15sp"
            android:textColor="#F2293C87"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/feet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="15sp"
            android:textColor="#F2293C87"
            android:layout_marginTop="15dp"
            />





    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-160dp"
        android:layout_marginEnd="-50dp"
        android:orientation="vertical">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mm"
            android:layout_marginRight="80dp"
            android:text="mm"
            android:textColor="@color/black"
            android:textSize="15sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cm"
            android:text="cm"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/m"
            android:text="m"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:id="@+id/km"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="in"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:id="@+id/in"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ft"
            android:textSize="15sp"
            android:id="@+id/ft"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            />





    </LinearLayout>
    <include layout="@layout/numeric_keyboard"/>


</FrameLayout>