<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EFEAEA"
    tools:context=".dataFragment">



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/data"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_gravity="end"

        />
    <Button
        android:id="@+id/clearButtonD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear All"
        android:onClick="onClearButtonClick"
        android:layout_gravity="end"
        android:layout_marginTop="300dp"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-195dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/bit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="25dp"
            android:hint="0.00"
            android:textColor="@color/black"
            style="@style/AppTheme.Dark.EditText"
            android:textSize="19sp"
            android:maxLength="15"

            />

        <EditText
            android:id="@+id/kilobyte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            style="@style/AppTheme.Dark.EditText"
            android:maxLength="15"
            />
        <EditText
            android:id="@+id/megabyte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="19sp"
            style="@style/AppTheme.Dark.EditText"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:maxLength="15"/>

        <EditText
            android:id="@+id/gigabyte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:maxLength="15"
            style="@style/AppTheme.Dark.EditText"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:id="@+id/terabyte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="19sp"
            android:textColor="@color/black"
            style="@style/AppTheme.Dark.EditText"
            android:maxLength="15"
            android:layout_marginTop="15dp"
            />
        <EditText

            android:id="@+id/tebibyte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="19sp"
            android:textColor="@color/black"
            style="@style/AppTheme.Dark.EditText"
            android:maxLength="15"
            android:layout_marginTop="15dp"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-250dp"
        android:layout_marginRight="-60dp"

        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="145dp"

            android:id="@+id/mm"
            android:layout_marginRight="80dp"
            android:text="Bit"
            android:textColor="@color/black"
            android:textSize="20sp"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cm"
            android:text="KB"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="38dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/m"
            android:text="MB"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="38dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GB"
            android:id="@+id/km"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="35dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TB"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/in"
            android:layout_marginTop="38dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TiB"
            android:textSize="20sp"
            android:id="@+id/ft"
            android:textColor="@color/black"
            android:layout_marginTop="28dp"


            />





    </LinearLayout>
    <include layout="@layout/numeric_keyboard"/>


</FrameLayout>