<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EFEAEA"
    tools:context=".lengthFragment">



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/length"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_gravity="end"

        />
    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear All"
        android:onClick="onClearButtonClick"
        android:layout_gravity="end"
        android:layout_marginTop="300dp"


        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-195dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/millimetre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="25dp"
            android:hint="0.00"
            android:textColor="@color/black"
            style="@style/AppTheme.Dark.EditText"
            android:textSize="19sp"
            android:maxLength="15"

            />

        <EditText
            android:id="@+id/centmetre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            style="@style/AppTheme.Dark.EditText"
            android:maxLength="15"
            />
        <EditText
            android:id="@+id/metre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="19sp"
            style="@style/AppTheme.Dark.EditText"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:maxLength="15"/>

        <EditText
            android:id="@+id/kilometre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:maxLength="15"
            style="@style/AppTheme.Dark.EditText"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:id="@+id/inches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="19sp"
            android:textColor="@color/black"
            style="@style/AppTheme.Dark.EditText"
            android:maxLength="15"
            android:layout_marginTop="15dp"
            />
        <EditText

            android:id="@+id/feet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="19sp"
            android:textColor="@color/black"
            style="@style/AppTheme.Dark.EditText"
            android:maxLength="15"
            android:layout_marginTop="15dp"
            />





    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-250dp"
        android:layout_marginRight="-90dp"

        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="145dp"

            android:id="@+id/mm"
            android:layout_marginRight="80dp"
            android:text="mm"
            android:textColor="@color/black"
            android:textSize="20sp"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cm"
            android:text="cm"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="38dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/m"
            android:text="m"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="38dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:id="@+id/km"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="35dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="in"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/in"
            android:layout_marginTop="38dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ft"
            android:textSize="20sp"
            android:id="@+id/ft"
            android:textColor="@color/black"
            android:layout_marginTop="28dp"


            />





    </LinearLayout>
    <include layout="@layout/numeric_keyboard"/>


</FrameLayout>